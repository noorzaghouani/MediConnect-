{% extends 'base.html.twig' %}

{% block title %}Dashboard Médecin - MediConnect{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('css/medecin/medecin_dashboard.css') }}">
    <link rel="stylesheet" href="{{ asset('css/medecin/modal.css') }}?v=2">
    <link rel="stylesheet" href="{{ asset('css/medecin/availability.css') }}">
    <link rel="stylesheet" href="{{ asset('css/medecin/toast.css') }}">
    <link rel="stylesheet" href="{{ asset('css/medecin/appointment_actions.css') }}">
{% endblock %}

{% block custom_styles %}{% endblock %}

{% block body %}
    {% include 'medecin/_sidebar.html.twig' %}

    <!-- Main Content -->
    <main class="main-content">
        <!-- Header -->
        <header class="header">
            <div class="header-left">
                <h1>Bienvenue dans l'espace Médecin</h1>
            </div>
            <div class="header-right">
                <button class="header-btn btn-primary" id="editProfileBtn">
                    <i class="fas fa-user-edit"></i>
                    Éditer Profil
                </button>
                <a href="{{ path('app_logout') }}" class="header-btn btn-secondary">
                    <i class="fas fa-sign-out-alt"></i>
                    Déconnexion
                </a>
            </div>
        </header>

        <!-- Flash Messages -->
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i> {{ message }}
            </div>
        {% endfor %}

        <!-- Rendez-vous Section -->
        <div class="panel">
            <div class="panel-header">
                <h2 class="panel-title">
                    <i class="fas fa-calendar-day"></i>
                    Rendez-vous
                </h2>
            </div>

            <div class="appointments-list">
                {% if appointments is empty %}
                    <div class="no-appointments" style="text-align: center; padding: 40px; color: #64748b;">
                        <i class="fas fa-calendar-check" style="font-size: 2rem; margin-bottom: 15px;"></i>
                        <p>Aucun rendez-vous prévu pour le moment.</p>
                    </div>
                {% else %}
                    {% for rdv in appointments %}
                        <div class="appointment-item">
                            <div class="appointment-header">
                                <div class="patient-info">
                                    <h4>{{ rdv.patient.prenom }} {{ rdv.patient.nom }}</h4>
                                    <p>
                                        <i class="fas fa-phone"></i> {{ rdv.patient.telephone|default('Non renseigné') }}
                                        {% if rdv.statut == 'en_attente' %}
                                            <span style="color: #eab308; font-weight: bold; font-size: 0.8em; margin-left: 10px;">• EN ATTENTE</span>
                                        {% elseif rdv.statut == 'confirme' %}
                                            <span style="color: #10b981; font-weight: bold; font-size: 0.8em; margin-left: 10px;">• CONFIRMÉ</span>
                                        {% elseif rdv.statut == 'annule' %}
                                            <span style="color: #ef4444; font-weight: bold; font-size: 0.8em; margin-left: 10px;">• ANNULÉ</span>
                                        {% endif %}
                                    </p>
                                </div>
                                <div class="appointment-time">
                                    <i class="fas fa-calendar-day"></i> {{ rdv.dateHeure|date('d/m/Y') }} <br>
                                    <i class="fas fa-clock"></i> {{ rdv.dateHeure|date('H:i') }}
                                </div>
                            </div>
                            <div class="appointment-actions">
                                {% if rdv.statut == 'en_attente' %}
                                    {# Boutons pour confirmer ou refuser le RDV #}
                                    <form method="POST" action="{{ path('app_medecin_confirm_appointment', {'id': rdv.id}) }}" style="display: inline;">
                                        <button type="submit" class="action-btn btn-success">
                                            <i class="fas fa-check"></i> Confirmer
                                        </button>
                                    </form>
                                    <form method="POST" action="{{ path('app_medecin_reject_appointment', {'id': rdv.id}) }}" style="display: inline;">
                                        <button type="submit" class="action-btn btn-danger">
                                            <i class="fas fa-times"></i> Refuser
                                        </button>
                                    </form>
                                {% endif %}
                                
                                <a href="{{ path('app_dossier_show', {'id': rdv.patient.id}) }}" class="action-btn btn-view" style="text-decoration:none;">
                                    <i class="fas fa-folder-open"></i> Voir Dossier
                                </a>
                                
                                {% if rdv.statut == 'confirme' %}
                                    <a href="{{ path('app_consultation_new', {'id': rdv.id}) }}" class="action-btn btn-consult" style="text-decoration:none;">
                                        <i class="fas fa-stethoscope"></i> Consulter
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </main>

    <!-- Modal: Edit Profile -->
    <div id="editProfileModal" class="modal-overlay">
        <div class="modal-container">
            <!-- Modal Header (Teal with Avatar) -->
            <div class="modal-header-teal">
                <div class="modal-header-content">
                    <div class="modal-avatar">
                        <i class="fas fa-user-md"></i>
                    </div>
                    <h2 class="modal-title-white">Éditer Profil & Sécurité</h2>
                </div>
                <button class="modal-close-white" id="closeModalBtn" type="button">&times;</button>
            </div>

            <div class="modal-body-white">
                <form action="{{ path('app_medecin_edit_profile') }}" method="POST">
                    
                    <!-- Section: Informations Personnelles -->
                    <div class="section-header-teal">
                        <i class="fas fa-user"></i>
                        <span>Informations Personnelles</span>
                    </div>

                    <div class="form-fields-gray">
                        <div class="field-horizontal">
                            <label class="field-label-left">Nom</label>
                            <input type="text" name="nom" class="field-input-right" value="{{ app.user.nom }}" placeholder="">
                        </div>

                        <div class="field-horizontal">
                            <label class="field-label-left">Prénom</label>
                            <input type="text" name="prenom" class="field-input-right" value="{{ app.user.prenom }}" placeholder="">
                        </div>

                        <div class="field-horizontal">
                            <label class="field-label-left">Spécialité</label>
                            <select name="specialite" class="field-input-right">
                                <option value="">Sélectionnez votre spécialité</option>
                                {% for speciality in specialities|default([]) %}
                                    <option value="{{ speciality.id }}" {% if app.user.specialite and app.user.specialite.id == speciality.id %}selected{% endif %}>{{ speciality.nom }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="field-horizontal">
                            <label class="field-label-left">Téléphone</label>
                            <input type="tel" name="telephone" class="field-input-right" value="{{ app.user.telephone }}" placeholder="">
                        </div>
                    </div>

                    <!-- Section: Changer Mot de Passe -->
                    <div class="section-header-teal" style="margin-top: 25px;">
                        <i class="fas fa-key"></i>
                        <span>Changer Mot de Passe</span>
                    </div>

                    <div class="form-fields-gray">
                        <div class="field-horizontal">
                            <label class="field-label-left">Mot de passe actuel</label>
                            <input type="password" name="current_password" class="field-input-right" placeholder="••••••••">
                        </div>

                        <div class="field-horizontal">
                            <label class="field-label-left">Nouveau mot de passe</label>
                            <input type="password" name="new_password" class="field-input-right" placeholder="••••••••">
                        </div>

                        <div class="field-horizontal">
                            <label class="field-label-left">Confirmer le mot de passe</label>
                            <input type="password" name="confirm_password" class="field-input-right" placeholder="••••••••">
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="modal-buttons">
                        <button type="submit" class="btn-save-teal">
                            <i class="fas fa-save"></i> Enregistrer Tout
                        </button>
                        <button type="button" class="btn-cancel-gray" id="cancelModalBtn">
                            Annuler
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal: Gérer Disponibilités -->
    <div id="availabilityModal" class="modal-overlay">
        <div class="modal-container">
            <!-- Modal Header -->
            <div class="modal-header-teal">
                <div class="modal-header-content">
                    <div class="modal-avatar">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <h2 class="modal-title-white">Gérer Mes Disponibilités</h2>
                </div>
                <button class="modal-close-white" id="closeAvailabilityBtn" type="button">&times;</button>
            </div>

            <div class="modal-body-white">
                <form id="availabilityForm">
                    <div class="form-group-vertical">
                        <label>Sélectionner la date</label>
                        <input type="date" id="availability_date" name="date" class="field-input-full" min="{{ "now"|date("Y-m-d") }}">
                    </div>

                    <div class="availability-hours-row">
                        <div class="form-group-vertical">
                            <label>Heure de début</label>
                            <input type="time" id="availability_heure_debut" name="heure_debut" class="field-input-full" value="09:00">
                        </div>

                        <div class="form-group-vertical">
                            <label>Heure de fin</label>
                            <input type="time" id="availability_heure_fin" name="heure_fin" class="field-input-full" value="17:00">
                        </div>
                    </div>

                    <div class="modal-buttons">
                        <button type="submit" class="btn-save-teal">
                            <i class="fas fa-save"></i> Enregistrer
                        </button>
                        <button type="button" class="btn-cancel-gray" id="cancelAvailabilityBtn">
                            Annuler
                        </button>
                    </div>
                </form>

                <!-- Liste des disponibilités -->
                <div id="availabilityList" class="availability-list" style="margin-top: 30px;">
                    <h3 style="color: #0d9488; font-size: 16px; margin-bottom: 15px;">
                        <i class="fas fa-list"></i> Mes disponibilités enregistrées
                    </h3>
                    <div id="availabilityItems"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}



{% block javascripts %}
    <script src="{{ asset('js/medecin/dashboard.js') }}?v=20251224"></script>
{% endblock %}
